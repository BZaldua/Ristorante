<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="MenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <ListView
            android:id="@+id/menu_list_view"
            android:layout_width="358dp"
            android:layout_height="476dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="16dp"
            tools:listitem="@layout/menu_row"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/process_button" />

        <Button
            android:id="@+id/process_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProcessMenu"
            android:layout_marginStart="29dp"
            tools:layout_editor_absoluteY="503dp"
            tools:layout_editor_absoluteX="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/process_button"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/process_button"
            android:text="Clear"
            tools:layout_editor_absoluteY="503dp"
            tools:layout_editor_absoluteX="163dp" />


    </RelativeLayout>




</RelativeLayout>